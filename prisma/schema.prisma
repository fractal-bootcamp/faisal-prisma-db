generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  title String
  isbn  String
  id    String @id @default(cuid())

  authorId String

  author Author   @relation(fields: [authorId], references: [id])
  Genre  Genre[] // Many-to-many with genres
  Borrow Borrow[]
}

model Author {
  id String @id @default(cuid())

  name      String
  biography String

  Book Book[]
}

model Genre {
  name String
  id   String @id @default(cuid())
  Book Book[]
}

model Member {
  name    String
  email   String
  address String
  id      String   @id @default(cuid())
  Borrow  Borrow[]
}

model Borrow {
  id String @id @default(cuid())

  memberId String
  member   Member @relation(fields: [memberId], references: [id])

  bookId String
  book   Book   @relation(fields: [bookId], references: [id])
}
